{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "ES6", "ES2015", "ES2019"],
    "allowJs": true,
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false
  },
  "include": ["src"],
  "exclude": [
    "coverage",
    "node_modules",
    "dist",
    "src/__tests__/**",
    "src/stories/**",
    "src/assets/**"
  ]
}
